# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{txt,md}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

# Tab indented:
#  .go
#  .js
#  .json
#  .htm
#  .html
#  .css
[*.{go,js,json,htm{,l},css,gitignore,dockerignore,editorconfig}]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,htm{,l}}]
indent_size = 4

[Dockerfile]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Space indented:
#  .py
#  .yml
#  .yaml
#  .sql
[*.{py,y{,a}ml,sql}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.y{,a}ml]
indent_size = 2

[*.sql]
insert_final_newline = false

[.vscode/*.json]
indent_style = space
insert_final_newline = false
